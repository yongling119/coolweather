<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_add_city"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yongling.coolweather.AddCityActivity">

    <TextView
        android:id="@+id/chosenCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:text="已选城市"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"/>

    <ListView
        android:id="@+id/chosenCityList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/chosenCity"
        android:layout_centerHorizontal="true"/>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/addcityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_add_white_24dp"
        app:fab_colorDisabled="@color/colorTitle"
        app:fab_colorNormal="@color/colorPrimary"
        app:fab_colorPressed="@color/colorAccent"
        app:fab_label="添加城市"
        app:fab_size="normal"/>
</RelativeLayout>
